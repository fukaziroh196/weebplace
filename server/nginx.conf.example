# Пример конфигурации Nginx для безопасной отдачи статических файлов
# Скопируйте этот файл в /etc/nginx/sites-available/your-site и настройте под свой домен

server {
    listen 80;
    server_name your-domain.com;
    
    # Редирект на HTTPS (рекомендуется)
    # return 301 https://$server_name$request_uri;
    
    # Или для HTTPS:
    # listen 443 ssl http2;
    # ssl_certificate /path/to/cert.pem;
    # ssl_certificate_key /path/to/key.pem;

    # Корневая директория
    root /path/to/your/project;
    
    # Максимальный размер загружаемого файла
    client_max_body_size 5M;

    # Безопасная отдача статических файлов из uploads
    location /uploads/ {
        alias /path/to/your/project/server/uploads/;
        
        # Запрещаем выполнение любых скриптов
        location ~ \.(php|pl|py|jsp|asp|sh|cgi)$ {
            deny all;
            return 403;
        }
        
        # Устанавливаем безопасные заголовки
        add_header X-Content-Type-Options "nosniff" always;
        add_header Content-Disposition "inline" always;
        
        # Кэширование для изображений
        expires 30d;
        add_header Cache-Control "public, immutable";
        
        # Только GET и HEAD запросы
        limit_except GET HEAD {
            deny all;
        }
        
        # Запрещаем листинг директорий
        autoindex off;
    }
    
    # Безопасная отдача аватаров
    location /uploads/avatars/ {
        alias /path/to/your/project/server/uploads/avatars/;
        
        # Запрещаем выполнение любых скриптов
        location ~ \.(php|pl|py|jsp|asp|sh|cgi)$ {
            deny all;
            return 403;
        }
        
        # Устанавливаем правильный Content-Type для изображений
        location ~ \.(jpg|jpeg)$ {
            add_header Content-Type "image/jpeg" always;
            add_header X-Content-Type-Options "nosniff" always;
        }
        
        location ~ \.(png)$ {
            add_header Content-Type "image/png" always;
            add_header X-Content-Type-Options "nosniff" always;
        }
        
        # Кэширование
        expires 7d;
        add_header Cache-Control "public";
        
        # Только GET и HEAD
        limit_except GET HEAD {
            deny all;
        }
        
        autoindex off;
    }

    # Проксирование API запросов на Node.js сервер
    location /api/ {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Статические файлы фронтенда
    location / {
        try_files $uri $uri/ /index.html;
        
        # Безопасные заголовки
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    }
}

